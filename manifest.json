{
  "manifest_version": 3,
  "name": "龙空主题定制",
  "version": "1.0",
  "description": "自定义龙空论坛的外观",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.lkong.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.lkong.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 